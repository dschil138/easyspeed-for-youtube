{
  "manifest_version": 3,
  "name": "DragSpeed For YouTube",
  "version": "2.5",
  "description": "Easily change the playback speed of youtube videos by clicking and dragging your mouse to the left or the right.",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["*://www.youtube.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "64": "images/64.png",
    "128": "images/128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
