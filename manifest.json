{
  "manifest_version": 3,
  "name": "Youtube 2x Click",
  "version": "2.0",
  "description": "Click and hold anywhere on a Youtube video to make it play at 2X speed while the click is held.",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["*://www.youtube.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
